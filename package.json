{
  "name": "ghost-launcher",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "check:ui-guidelines": "node scripts/check-ui-guidelines.mjs",
    "test:ui-guidelines-check": "node --test scripts/check-ui-guidelines.test.mjs",
    "preview": "vite preview",
    "tauri": "tauri",
    "e2e:setup": "cargo install tauri-driver --locked && npx tauri build --no-bundle",
    "e2e": "playwright test -c playwright.tauri.config.ts"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.58.0",
    "@fluentui/react-icons": "^2.0.280",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2",
    "@tauri-apps/plugin-sql": "^2.3.2",
    "@tauri-apps/plugin-store": "^2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "edgedriver": "^6.3.0",
    "jsdom": "^27.0.1",
    "selenium-webdriver": "^4.41.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
